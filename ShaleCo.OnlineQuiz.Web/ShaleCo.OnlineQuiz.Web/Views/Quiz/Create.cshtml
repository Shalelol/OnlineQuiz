@model ShaleCo.OnlineQuiz.Web.Models.Quiz

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="page-header">
        <h4>Create Quiz</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="well bs-component">
            <form class="form-horizontal">
                <fieldset>
                    <legend>New Quiz</legend>
                    <div class="form-group">
                        <label for="quizName" class="col-lg-2 control-label">Quiz Name</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="quizName" placeholder="Quiz Name" />
                        </div>
                    </div>
                </fieldset>
            </form>
            <form class="form-horizontal">
                <fieldset>
                    <legend>Questions</legend>
                    <div class="form-group">
                        <label for="question1" class="col-lg-2 control-label">Question 1</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="question1" placeholder="Question" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="question1correct" class="col-lg-2 control-label">Correct Answer</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="question1correct" placeholder="Correct Answer" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="question1incorrect" class="col-lg-2 control-label">Incorrect Answers</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="question1incorrect1" placeholder="Incorrect Answer" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 text-right">
                            <a href="#" class="btn btn-default btn-xs">Add Incorrect Answer</a>
                        </div>
                    </div>
                </fieldset>
            </form>
            <hr />
            <form>
                <div class="form-group">
                    <div class="col-lg-10 text-right">
                        <a href="#" class="btn btn-default">Add Question</a>
                        <a href="#" class="btn btn-primary">Save Quiz</a> 
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

